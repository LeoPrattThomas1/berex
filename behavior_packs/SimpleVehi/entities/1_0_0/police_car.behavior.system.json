{
    "format_version": "1.8.0",
    "minecraft:entity": {
        "description": {
            "identifier": "aspire:police_car",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false
        },
        "component_groups": {
            "minecraft:minecar": {
		            "minecraft:is_tamed": {
            },
            "minecraft:rideable": {
                "priority": 0,
                "seat_count": 4,
                "crouching_skip_interact": false,
                "family_types": [
                    "player",
					"villager",
					"cat",
					"human",
					"npc"
                ],
                "interact_text": "Drive",
		            "swing": true,
		            "particle_on_start": {
		            "particle_type": "lava"
		        },
		        "pull_in_entities": true,
                "seats": 
                    [
                        { "position": [ 0.5, 0.55, 0 ] },
		                { "position": [ -0.5, 0.55, 0 ] },		  
                        { "position": [ 0.5, 0.55, -1.10 ] },
                        { "position": [ -0.5, 0.55, -1.20 ] }		  
                    ]
                }
            },
            "minecraft:bugfixer": {
                "minecraft:timer": {
                "time": [ 0.1, 0.1 ],
                "looping": false,
                "time_down_event": {
                "event": "minecraft:bugfix",
                "target": "self"
                }
            } 
	    },
        "minecraft:horse_saddled": {
            "minecraft:input_ground_controlled": {
            },
            "minecraft:can_power_jump": {
            },
            "minecraft:behavior.player_ride_tamed": {
            }
        }
    },
    
    "components": {
	    "minecraft:scale": {
        "value":1.0
        },
        "minecraft:equippable": {
            "slots": [
            {
                "slot": 0,
                "item": "saddle",
                "accepted_items": ["saddle"],
                "on_equip": {
                    "event": "minecraft:horse_saddled"
                },
                "on_unequip": {
                    "event": "minecraft:horse_unsaddled"
                }
            },
            {
                "slot": 1,
                "item": "horsearmoriron",
                "accepted_items": [
                    "horsearmorleather",
                    "horsearmoriron",
                    "horsearmorgold",
                    "horsearmordiamond"
                    ]
                }
            ]
        },
        "minecraft:type_family": {
            "family": [ "aspire","Xpander" ]
        },
	    "minecraft:horse.jump_strength": {
            "value": 0.5
        },
        "minecraft:breathable": {
            "totalSupply": 10,
            "suffocateTime": 0
        },
	    "minecraft:is_chested": {
        },
        "minecraft:collision_box": {
            "width": 1.3,
            "height": 0.9
        },
        "minecraft:health": {
            "value": {
                "range_min": 120,
                "range_max": 120
            }
        },
        "minecraft:inventory": {
            "inventory_size": 15,
            "container_type": "horse",
		    "private": false
        },
        "minecraft:movement": {
            "value": {
                "range_min": 0.20, 
                "range_max": 0.22
            }
        },
		"minecraft:loot": {
			"table": "loot_tables/entities/police_car.json"
		},		
	    "minecraft:physics": {
            "has_gravity": true
        },
        "minecraft:fire_immune": true,
	    "minecraft:knockback_resistance": {
            "value": 100,
            "max": 100
        },
        "minecraft:navigation.walk": {
            "can_float": true,
            "avoid_water": false
        },
        "minecraft:movement.basic": {
        },
        "minecraft:jump.static": {
        },
        "minecraft:walk_animation_speed": {
            "value": 20
        },
        "minecraft:push_through": {
            "value": 1
        },
        "minecraft:nameable": {
        }
    },

    "events": {
        "minecraft:entity_spawned": {
            "randomize": [
                {
                    "weight": 100,
                    "add": {
                        "component_groups": [
                            "minecraft:minecar"
                        ]
                    }
                }
            ]
        },
        "minecraft:horse_saddled": {
            "add": {
                "component_groups": [
                "minecraft:horse_saddled"
                ]
            }
        },
        "minecraft:horse_unsaddled": {
		    "add": {
                "component_groups": [
                        "minecraft:bugfixer"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "minecraft:horse_saddled"
                    ]
                }
            },
	        "minecraft:bugfix": {
		        "add": {
                    "component_groups": [
                        "minecraft:minecar"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "minecraft:bugfixer"
                    ] 
                }
            } 
        }
    }
}